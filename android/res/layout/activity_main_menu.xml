<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#004d40"
            android:columnCount="1"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:rowCount="6"
            tools:context=".MainMenuActivity">

    <TextView
        android:id="@+id/text_game_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-light"
        android:gravity="start"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textAlignment="gravity"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="70dp"
        android:typeface="normal"/>

    <Button
        android:id="@+id/buttonNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="2"
        android:background="#00ffffff"
        android:clickable="true"
        android:enabled="true"
        android:fontFamily="sans-serif-thin"
        android:gravity="start|end"
        android:onClick="initiateGame"
        android:text="@string/menu_new_game"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="@drawable/main_menu_button_colour"
        android:textSize="44dp"
        android:typeface="normal"/>

    <Button
        android:id="@+id/buttonLoadGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:background="#00ffffff"
        android:fontFamily="sans-serif-thin"
        android:gravity="start|end"
        android:onClick="goLoadGame"
        android:text="@string/menu_load_game"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="@drawable/main_menu_button_colour"
        android:textSize="44dp"
        android:typeface="normal"/>

    <Button
        android:id="@+id/buttonOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="4"
        android:background="#00ffffff"
        android:fontFamily="sans-serif-thin"
        android:gravity="start|end"
        android:onClick="goOptions"
        android:text="@string/menu_options"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="@drawable/main_menu_button_colour"
        android:textSize="44dp"
        android:typeface="normal"/>

    <Button
        android:id="@+id/buttonAboutGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="5"
        android:background="#00ffffff"
        android:fontFamily="sans-serif-thin"
        android:gravity="start|end"
        android:onClick="goAbout"
        android:text="@string/menu_about_game"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="@drawable/main_menu_button_colour"
        android:textSize="44dp"
        android:typeface="normal"/>

</GridLayout>
